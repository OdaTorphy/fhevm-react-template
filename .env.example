# Network Configuration
# Get RPC URL from https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key_here
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# Private Key (DO NOT share or commit this!)
# Export from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Etherscan API Key for contract verification
# Get from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas Reporter Configuration (optional)
REPORT_GAS=false
REPORT_GAS_FILE=gas-report.txt
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Network Selection (sepolia, mainnet, localhost)
NETWORK=sepolia

# Contract Deployment Configuration
DEPLOYER_ADDRESS=your_deployer_address_here

# Access Control Configuration
# Admin addresses for contract management
ADMIN_ADDRESS=your_admin_address_here
PAUSER_ADDRESS=your_pauser_address_here
MINTER_ADDRESS=your_minter_address_here

# Pauser Set Configuration
# Comma-separated list of addresses that can pause the contract
PAUSER_SET=0x1234567890123456789012345678901234567890,0x2345678901234567890123456789012345678901

# Monitor Configuration
MONITOR_ADDRESS=your_monitor_address_here
VERIFIER_ADDRESS=your_verifier_address_here

# Privacy Settings
ENABLE_PRIVACY_MODE=true
ENCRYPTION_ENABLED=true

# Performance Optimization
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200
COMPILER_VERSION=0.8.24

# Security Settings
ENABLE_REENTRANCY_GUARD=true
ENABLE_PAUSABLE=true
ENABLE_ACCESS_CONTROL=true

# Testing Configuration
TEST_MNEMONIC=test test test test test test test test test test test junk
TEST_CHAIN_ID=31337

# CI/CD Configuration
CI=false
COVERAGE=false

# API Keys for Third-party Services
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here

# Contract Verification
AUTO_VERIFY=false
VERIFY_CONTRACTS=true

# Rate Limiting
MAX_REPORTS_PER_DAY=100
MIN_REPORT_INTERVAL=3600
