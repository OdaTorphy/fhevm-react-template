{
  "name": "fhevm-sdk",
  "version": "1.0.0",
  "description": "Framework-agnostic FHEVM SDK for building confidential dApps with wagmi-like developer experience",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.mjs",
      "require": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts src/vue/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/react/index.ts src/vue/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fhevm",
    "zama",
    "encryption",
    "fhe",
    "homomorphic-encryption",
    "privacy",
    "confidential-computing",
    "blockchain",
    "ethereum",
    "sdk",
    "react",
    "vue",
    "typescript"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "vue": ">=3.0.0",
    "ethers": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "fhevmjs": "^0.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "ethers": "^6.9.0",
    "react": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "vue": "^3.4.0"
  }
}
